<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_app"
    tools:context=".AudifonosActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="212dp"
                android:background="@color/background_app"
                android:contentDescription="@string/portada_de_audifonos"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/imagen_fondo_audifono" />

            <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="174dp"
                android:layout_height="67dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/telex"
                android:gravity="center"
                android:text="@string/audifonos"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="35sp"
                android:textStyle="bold" />

            <RadioGroup
                android:layout_width="381dp"
                android:layout_height="318dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="15dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/btnABoton1"
                    android:layout_width="379dp"
                    android:layout_height="91dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/buttons_shape"
                    android:fontFamily="@font/telex"
                    android:text="@string/skullcandy_hesh_3"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/btnABoton2"
                    android:layout_width="379dp"
                    android:layout_height="91dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/buttons_shape"
                    android:fontFamily="@font/telex"
                    android:text="@string/sony_wh1000xm4"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/btnABoton3"
                    android:layout_width="379dp"
                    android:layout_height="91dp"
                    android:background="@drawable/buttons_shape"
                    android:fontFamily="@font/telex"
                    android:text="@string/bose_700uc"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </RadioGroup>

            <LinearLayout
                android:id="@+id/llContenedorAudifonos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>