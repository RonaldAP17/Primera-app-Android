<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_app"
    tools:context=".TarjetasActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewTarjetaGrafica"
                android:layout_width="match_parent"
                android:layout_height="212dp"
                android:background="@color/background_app"
                android:contentDescription="@string/imagen_de_tarjetas_graficas"
                app:srcCompat="@drawable/imagen_fondo_grafica" />

            <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="174dp"
                android:layout_height="67dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/telex"
                android:gravity="center"
                android:text="@string/modelos"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="35sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="381dp"
                android:layout_height="318dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="15dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/btnTGBoton1"
                    android:layout_width="379dp"
                    android:layout_height="91dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/buttons_shape"
                    android:fontFamily="@font/telex"
                    android:text="@string/nvidia_gtx_1660"
                    android:textSize="21sp"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/btnTGBoton2"
                    android:layout_width="379dp"
                    android:layout_height="91dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/buttons_shape"
                    android:fontFamily="@font/telex"
                    android:text="@string/radeon_rx_6700_xt"
                    android:textSize="21sp"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/btnTGBoton3"
                    android:layout_width="379dp"
                    android:layout_height="91dp"
                    android:background="@drawable/buttons_shape"
                    android:fontFamily="@font/telex"
                    android:text="@string/nvidia_rtx_3080"
                    android:textSize="21sp"
                    android:textStyle="bold" />
            </RadioGroup>

            <LinearLayout
                android:id="@+id/llContenedorTarjetas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>