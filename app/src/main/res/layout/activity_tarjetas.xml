<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_app"
    tools:context=".TarjetasActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="212dp"
                android:background="@color/background_app"
                android:contentDescription="@string/portada_de_tarjetas_graficas"
                app:srcCompat="@drawable/imagen_fondo_grafica" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/boton_amarillo"
                android:fontFamily="@font/telex"
                android:gravity="center"
                android:text="@string/tarjetas_graficas"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/cardview_default_elevation"
                android:layout_marginTop="12dp"
                android:background="@drawable/buttons_shape"
                android:fontFamily="@font/telex"
                android:padding="30dp"
                android:text="@string/lorem_ipsum_dolor_sit_amet_consectetur_adipiscing_elit_integer_vitae_massa_lobortis_nulla_fringilla_commodo_in_dui_arcu_porttitor_a_commodo_condimentum_hendrerit_quis_diam_aliquam_vestibulum_elit_congue"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>