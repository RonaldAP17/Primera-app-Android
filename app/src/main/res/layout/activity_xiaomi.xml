<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".XiaomiActivity"
    android:background="@color/background_app">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageViewXiaomi"
                android:layout_width="match_parent"
                android:layout_height="212dp"
                android:background="@color/background_app"
                android:contentDescription="@string/portada_de_audifonos"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/imagen_fondo_xiaomi" />

            <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="132dp"
                android:layout_height="67dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/telex"
                android:gravity="center"
                android:text="Xiaomi"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="35sp"
                android:textStyle="bold" />

            <RadioGroup
                android:layout_width="381dp"
                android:layout_height="318dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="15dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/btnCXBoton1"
                    android:layout_width="379dp"
                    android:layout_height="91dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/buttons_shape"
                    android:fontFamily="@font/telex"
                    android:text="Xiaomi Mi 11"
                    android:textSize="21sp"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/btnCXBoton2"
                    android:layout_width="379dp"
                    android:layout_height="91dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/buttons_shape"
                    android:fontFamily="@font/telex"
                    android:text="Redmi Note 10"
                    android:textSize="21sp"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/btnCXBoton3"
                    android:layout_width="379dp"
                    android:layout_height="91dp"
                    android:background="@drawable/buttons_shape"
                    android:fontFamily="@font/telex"
                    android:text="Xiaomi Mi 9t"
                    android:textSize="21sp"
                    android:textStyle="bold" />

            </RadioGroup>

            <LinearLayout
                android:id="@+id/llContenedorCelularXiaomi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>