<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppleActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="match_parent"
                android:layout_height="212dp"
                android:contentDescription="@string/imagen_de_iphone"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/portada_de_iphone" />

            <TextView
                android:id="@+id/tvTitulo2"
                android:layout_width="156dp"
                android:layout_height="59dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/telex"
                android:gravity="center"
                android:text="@string/iphone"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="35sp"
                android:textStyle="bold" />

            <RadioGroup
                android:layout_width="393dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp">

                <RadioButton
                    android:id="@+id/btnCIBoton1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/iphone_8_plus" />

                <RadioButton
                    android:id="@+id/btnCIBoton2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/iphone_x" />

                <RadioButton
                    android:id="@+id/btnCIBoton3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/iphone_12_pro_max" />
            </RadioGroup>

            <LinearLayout
                android:id="@+id/llContenedorCelularApple"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"></LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>